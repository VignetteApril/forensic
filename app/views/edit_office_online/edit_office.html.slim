body topmargin=0 leftmargin=0 onload="javascript:WebOpen();"
  div style="text-align:left;font-size:15px;"
    input type="button" class="button" value="保存文档" onclick="WebSave();"
    input type="button" value="关闭智能窗口" onclick="window.opener=null; window.open('','_self',''); window.close();"

javascript:
  var strOpenUrl = "#{@file_path}" ; //取得打开路径和文件名
  var bOpen=false;//设置控件打开文档的状态，默认为FALSE
  strSmartUrl = "WebOffice://|Officectrl|" + window.location.href;//开启智能窗模式
  var WebOffice;//WebOffice的JS编程对象
  function WebOpen()
  {
    WebOffice = document.getElementById('WebOffice');//获得控件对象
    if (WebOffice){//等待控件初始化完毕，时间可以根据网络速度设定。
        setTimeout('OpenDocument()',1000);
        setTimeout('ReplaceWordText()', 2000);
    }
  }

  // 执行替换操作
  function ReplaceWordText() {
      var current_word = WebOffice.ActiveDocument;
      var app = current_word.Application;
      // 委托方信息替换
      app.Selection.Find.Execute('@#省@#', false, false, false, false, false, 1, false, false, "#{@province_name}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#市@#', false, false, false, false, false, 1, false, false, "#{@city_name}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#区@#', false, false, false, false, false, 1, false, false, "#{@district_name}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#委托方名称@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:organization_name)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#委托人姓名@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:user_name)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#委托人电话@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:wtr_phone)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#委托方地址@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:organization_addr)}", 2, false, false, false, false);
      // 委托鉴定事项替换
      app.Selection.Find.Execute('@#案由@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:anyou)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#案件性质@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:case_property)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#委托日期@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:commission_date)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#受委托科室@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:department).try(:name)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#鉴定事项@#', false, false, false, false, false, 1, false, false, "#{@case_matter}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#案件类型@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:case_type)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#鉴定事项及要求@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:matter_demand)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#基本案情@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:base_info)}", 2, false, false, false, false);
      // 鉴定人信息替换
      app.Selection.Find.Execute('@#被鉴定人类型@#', false, false, false, false, false, 1, false, false, "#{@appraised_unit_type}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#被鉴定人名称@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:appraised_unit).try(:name)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#被鉴定人性别@#', false, false, false, false, false, 1, false, false, "#{@appraised_gender}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#被鉴定人生日@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:appraised_unit).try(:birthday)}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#被鉴定人证件类型@#', false, false, false, false, false, 1, false, false, "#{@appraised_id_type}", 2, false, false, false, false);
      app.Selection.Find.Execute('@#被鉴定人联系地址@#', false, false, false, false, false, 1, false, false, "#{@main_case.try(:appraised_unit).try(:addr)}", 2, false, false, false, false);

      // TODO: 移交材料相关信息替换
      // 等待需求确认
      app.Selection.Find.Execute('@#移交材料@#', false, false, false, false, false, 1, false, false, "#{@transfer_docs}", 2, false, false, false, false);

      // 加入条形码图片
      // 获取总页数
      // 在每页都加入图片
      // BUG: 因为每次会往同样的位置加入条形码，用户保存后，下一次进来会在同一个位置再加入条形码
      if ("#{@barcode_path}" != '') {
          var pageCount = current_word.ComputeStatistics(2);
          if (pageCount > 1) {
              for (var i = 0; i <= pageCount; i++) {
                  current_word.GoTo(1, i + 1).Select();
                  var Shape = app.Selection.InlineShapes.AddPicture("#{@barcode_path}", false, true).ConvertToShape();
                  Shape.RelativeHorizontalPosition = 5;
                  Shape.RelativeVerticalPosition = 5;
                  Shape.Top = 20;
                  Shape.Left = 2;
                  Shape.Width = 100;
                  Shape.Height = 50;
              }
          } else {
              var Shape = app.Selection.InlineShapes.AddPicture("#{@barcode_path}", false, true).ConvertToShape();
              Shape.RelativeHorizontalPosition = 5;
              Shape.RelativeVerticalPosition = 5;
              Shape.Top = 20;
              Shape.Left = 2;
              Shape.Width = 100;
              Shape.Height = 50;
          }

      }
  }

  function OpenDocument()
  {
    try{
      document.getElementById('WebOffice').Open(strOpenUrl,true,"Word.Document");
      bOpen=true;//如果js代码能执行到此句，说明控件能正常打开文档,则设置打开文档的状态为真
    }catch(e)
    {
      //如果WebOffice对象通过Open方法抛出异常，则可能控件没安装或者是使用了Google等高版本的Chrome引起，提示用户安装或启动智能窗,因此将此页转移回网页首页
      alert('请先下载安装WebOffice控件或启动智能窗链接浏览！');
      location.href='../index.html';
    }
  }

  function WebSave()
  {
      try {
          WebOffice.HttpInit();
          if (document.getElementById('filename'))
              WebOffice.HttpAddPostString("doc_id", "#{@department_doc.id}");
              WebOffice.HttpAddPostCurrFile("docfile", "");
              WebOffice.HttpAddPostString("doc_id", "#{@department_doc.id}");
              //strResults用于获得网页提交后的返回数据，可用以调试服务器端代码。

              var strResults = WebOffice.HttpPost("#{edit_office_online_save_doc_url}");
              var return_message = JSON.parse(strResults);
              if (return_message.status == 'ok') {
                  alert('office文档保存成功!');
                  document.getElementById('WebOffice').Close();
                  window.close();
              }

      }
      catch (e) {
          alert('发生错误！请使用查阅返回值！');
      }
  }
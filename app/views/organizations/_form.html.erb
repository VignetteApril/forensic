<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: '机构名称' %>
    <%= f.input :code, label: '机构编码' %>
    <%= f.input :desc, label: '机构简介' %>
    <%= f.association :area, label: '机构地区' %>
    <%= f.input :addr, label: '机构地址' %>
    <%= f.input :phone, label: '机构电话' %>
    <%= f.input :wechat_id, label: '机构微信号' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '确认', class: 'btn btn-success' %>
  </div>
<% end %>

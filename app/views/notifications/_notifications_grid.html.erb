<%= grid(@notifications, hide_submit_button: true, hide_reset_button: true, html: {style: "table-layout:fixed;"}) do |g|
  g.blank_slate  do
    content_tag :div, "暂时没有任何个人事务提醒", class: 'well'
  end  
  g.row_attributes do |version|
    if version.status == '未读'
      {style: 'font-weight: bold;', class: 'active'}
    end
  end

  g.column name: '分类', attribute: 'channel', html: {style: "width:150px;"}, custom_filter: Notification.channel_map_reverse, allow_multiple_selection: false do |a|
    Notification::CHANNEL_MAP[a.channel.to_sym]
  end
  g.column name: '标题', html: {style: "width:200px;"}, attribute: 'title' do |a|
    link_to a.title.blank? ? "..." : a.title, notification_path(a)
  end
  g.column name: '生成时间', attribute: 'created_at', filter: false, html: {style: "width:160px;"} do |a|
    distance_of_time_in_words_to_now(a.created_at, include_seconds: false) + "之前"
  end
  g.column name: '状态', attribute: 'status', html: {style: "width:150px;"}, custom_filter: {'未读'=>'false','已读'=>'true'}, allow_multiple_selection: false do |a|
    (a.status == true)? "已读" : "未读"
  end

  g.column  name: '操作',html: {style: "width:80px;"}  do |a|
    if a.status == false
      link_to edit_notification_path(a) do
        raw("<span class='glyphicon glyphicon-ok-sign' title='标记为已读'>标记为已读</span>")
      end
    end
  end

end -%>



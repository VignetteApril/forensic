.modal.fade id="case_no_modal" tabindex="-1" role="dialog" aria-labelledby="case_no_modal_label" aria-hidden="true"
  .modal-dialog role="document"
    .modal-content
      .modal-header
        h5 class="modal-title" id="case_no_modal_label" 请确认案件编号
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
          span aria-hidden="true" &times;
      .modal-body.text-center
        - if @main_case.case_no_display
          span = @main_case.case_no_display
        - else
          span = @main_case.get_case_no
      .modal-footer
        button type="button" class="btn btn-secondary" data-dismiss="modal" 关闭
        - if @main_case.case_no_display.nil?
          = link_to '生成案号', generate_case_no_main_case_path({id: @main_case, current_action: controller.action_name}), class: 'btn btn-primary'